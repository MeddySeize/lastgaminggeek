{% extends 'base.html.twig' %}

{% block title %} Mes Commandes de jeux video !{% endblock %}

{% block body %}
<div class="row">
    <div class="container">
        <h1>Je passe ma commande</h1>
        <hr>

        <div class="row">
            <div class="col-md-6">
                {% set formHtml %}
                    {{ form_start(form, {'action': path('order_recap'), 'method': 'POST'}) }}
                        {{ form_label(form.addresses, 'Choisissez votre adresse de livraison') }}
                        <a href="{{ path('account_address_add') }}">Ajouter une nouvelle adresse</a>
                    {{ form_end(form) }}
                {% endset %}
            {{ formHtml|replace({'[br]' : '<br/>'})|raw }}
            </div>
            <div class="col-md-6">
                <h3>RÃ©capitulatif de ma commande</h3>
                {% for product in basket %}
                    <div class="row">
                        <div class="col-2">
                            <img src="{{vich_uploader_asset(product.jeuxvideo, 'imageFile')}}" alt="{{product.jeuxvideo.name}}" height="75px;" width="80px" />
                        </div>
                        <div class="col-8">{{product.jeuxvideo.name}}</div>
                        <div class="col-2">{{product.quantity}}</div>
                    </div>
                <pre>
                    {{ dump(product) }}
                </pre>

                {% endfor %}
                
            </div>
            
        </div>

        
    </div>
</div>
{% endblock %}
