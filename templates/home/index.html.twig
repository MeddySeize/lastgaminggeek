{% extends 'base.html.twig' %}

{% block title %}GG-GEEK, Jeux d'occasion{% endblock %}

{% block body %}
   <div class="container">
        <div class="row h-100">
            <div class="col-md-12 my-auto">
                <div class="Htitle">
                    <h1 style="text-align: center;">Bienvenue sur GG GEEK</h1>
                </div>
            </div>
        </div>
        <div class="row">
            {# carousel #}
            {% set active = 'actisymfony ve' %}
            {% set first = 0 + 1 %}
            <div id="carouselIndicators" class="carousel slide col-centered" data-ride="carousel">
                {% for carousel in jeuxCarousel %}
                    <ol class="carousel-indicators">
                      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item {% if loop.index == 1 %} active {% endif %}">
                          <img class="d-block w-100" src="{{asset(carousel.coverImage)}}" alt="First slide">
                        </div>
                        <div class="carousel-item">
                          <img class="d-block w-100" src="{{asset(carousel.coverImage)}}"  alt="Second slide">
                        </div>
                        <div class="carousel-item">
                          <img class="d-block w-100" src="{{asset(carousel.coverImage)}}"  alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                      <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                      <span class="sr-only">Next</span>
                    </a>
                {% endfor %}
            </div>
          </div>            
        <hr>  
        {# Les articles #}
        <div class="col-md-12">
            <h5> Nouveaux Jeux d'occasion </h5>
        </div
        {% for jeux in jeuxvideo %} 
            {% if jeux|length < 0 %}
            <div class="col-md-12">
              <h3>Vendez vos Jeux!</h3>
            </div>
            {% else %}
                <div class="col-md-12">
                
                <a href="{{path('article_show', {'slug': jeux.slug})}}">
                  <div class="card" style="width: 18rem;">
                    {% if app.environment == 'prod' %}                    
                          <img src="{{ vich_uploader_asset(jeux, 'imageFile', 'App\\Entity\\Jeuxvideo') }}" alt="{{ jeux.name }}" class="card-img-top"/>
                    {% else %}
                          <img src="{{asset(jeux.coverImage)}}" alt="{{jeux.name}}"  class="card-img-top"/>
                    {% endif %}

                     {# la filtre number_format est une fonction qui permet de formater un nombre, le 2 représente le nombre de décimal après la virgule,
                     le point décimal et le séparateur de milliers à l'aide d'argument supplémentaire #}
                    <div class="card-body">
                      <h5 class="card-title">{{jeux.name}}</h5>
                      <p class="card-text">{{jeux.description|raw}}</p>
                      <img src="{{jeux.user.avatar}}" alt="{{jeux.user.pseudo}}" height="50px">
                      <h6 class="jeux-user">{{jeux.user.firstName}} {{jeux.user.lastName}}</h6>
                    </div>
                    <div class="card-footer">
                      <h5>Prix: {{(jeux.price / 100)|number_format(2, ',', '.') }} €</h5>
                    </div>
                  </div>
                </a>
                {% endif %}
            {% endfor %}
{% endblock %}

{% block javascripts %}
    <script>
        $('.carousel').carousel({
            interval: 2000
        });
    </script>
{% endblock %}